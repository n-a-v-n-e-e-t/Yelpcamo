<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yelpcamp</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/campgrounds"><strong>Yelpcamp</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <% if(!currentUser){ %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">SignUp</a>
                    </li>
                <% } else{ %>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notifications <span class="badge badge-secondary"><%= notifications.length %></span></a>
                        <ul class="dropdown-menu">
                          <li class="dropdown-item">
                              <a href="/notifications">View past notifications</a>
                          </li>
                          <% notifications.forEach(function(notification) { %>                          
                              <li class="dropdown-item">
                                  <a href="/notifications/<%= notification.id %>">
                                      <%= notification.username %> created a new campground
                                  </a>
                              </li>
                          <% }); %>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Signed In As <%= currentUser.username %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                <% } %>
            </ul>    
        </div>
    </nav>
    <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" style="margin-bottom: 0;" role="alert">
            <div class="container">
                <strong>Oh snap! </strong><%= error %>!
                <button type="button" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    <% } %>
    <% if(success && success.length > 0){ %>
        <div class="alert alert-success" style="margin-bottom: 0;" role="alert">
            <div class="container">
                <strong>Well done! </strong><%= success %>!
                <button type="button" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    <% } %>
