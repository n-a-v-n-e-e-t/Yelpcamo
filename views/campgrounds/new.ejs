<%- include('../partials/header')  -%>

<div class="container">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" placeholder="Name">
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                      <input type="file" class="custom-file-input" name="image" id="inputGroupFile01"
                        aria-describedby="inputGroupFileAddon01" accept="image/*" required>
                      <label class="custom-file-label" for="inputGroupFile01">Choose image</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="campground[price]" placeholder="Price">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" placeholder="Description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include('../partials/footer')  -%>
